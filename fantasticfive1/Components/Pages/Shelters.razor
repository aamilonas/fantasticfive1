@page "/shelters"
@using fantasticfive1.Models
@using fantasticfive1.Data
@inject fantasticfive1.Data.LookupService lookupservice;

<h1>Shelters</h1>

<br/>

<div class="form-check form-switch">
    <input class="form-check-input" style="font-size: 1.5rem;" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label" style="font-size: 1.5rem;" for="flexSwitchCheckDefault">Women and Child Friendly</label>
</div>
<div class="form-check form-switch">
    <input class="form-check-input" style="font-size: 1.5rem;" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label" style="font-size: 1.5rem;" for="flexSwitchCheckDefault">Include Paid Options</label>
</div>

<div class="container">
    <h1>Shelters</h1>
    <table class="table table-light">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Hours</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shelter in shelters)
            {
                <tr>
                    <td>@shelter.Name</td>
                    <td>@shelter.Address</td>
                    <td>@shelter.Hours</td>
                    <td>@shelter.PhoneNumber</td>
                </tr>
            }

        </tbody>
    </table>
</div>

@code {
    private List<Shelter> shelters = new List<Shelter>();
    protected override async void OnInitialized()
    {
        shelters = await lookupservice.ShelterLookup();
        int x = 0;
    }
    
