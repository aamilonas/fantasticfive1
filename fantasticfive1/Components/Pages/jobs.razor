@page "/jobs"
@using fantasticfive1.Models
@using fantasticfive1.Data
@inject fantasticfive1.Data.LookupService lookupservice;

<PageTitle>Jobs</PageTitle>
<h1>Jobs</h1>

<p>Jobs that you may apply for</p>

<div class="control-section" style="display: flex; justify-content: center; ">
    @foreach (var job in jobs) {
        <div class="row">
            <div class="card" style="width: 18rem; margin-bottom: 20px;">
              <img src="https://icscomplete.com/wp-content/uploads/2022/02/VanSchendel-Construction.jpeg" style="margin-bottom: 0;"  alt="Plumber"/>
              <div class="card-body">
                <h5 class="card-title" style="margin: 0; color: black;">@job.Title</h5>
                <p class="card-text" style="margin: 0; color: black;">@job.Time to @job.Expires </p>
              </div>
              <ul class="list-group list-group-flush" style="margin-top:0;">
                <li class="list-group-item" style="padding: 10px;">@job.Description</li>
                <li class="list-group-item" style="padding: 10px;">@job.Experience</li>
                <li class="list-group-item" style="padding: 10px;">
                    <a href="https://www.indeed.com/jobs?q=construction+jobs&l=Fort+Lauderdale%2C+FL&from=searchOnDesktopSerp&vjk=3d103a00ae674409&advn=9505405585411561">Apply</a>
                </li>

              </ul>
            </div>
        </div>
    }
</div>



@code {

    private List<Job> jobs = new List<Job>();
    protected override async void OnInitialized()
    {
        jobs = await lookupservice.JobLookup();
        Console.WriteLine($"Number of jobs retrieved: {jobs.Count}");
    }
}