@page "/donations/hygiene"

<PageTitle>Let's get clean</PageTitle>
<div class="container">
    <h1>Let's get clean</h1>
    <table class="table table-light">
        <thead>
            <tr>
                <th>Location</th>
                <th>Vouchers Remaining</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var location in locations)
            {
                <tr>
                    <td>@location.Name</td>
                    <td>@location.VoucherCount</td>
                    <td>
                        @if (location.VoucherCount > 0)
                        {
                            <a href="/donations/food/getnow/@location.Name" class="btn btn-primary">Get Now</a>
                        }
                        else
                        {
                            <strong>Try Again later</strong>
                        }

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

@code {

    private Location[] locations = new Location[5];

    protected override void OnInitialized()
    {
        Random rand = new Random();
        locations[0] = new Location { Name = "Public Bathroom Number 1", VoucherCount = rand.Next(10) };
        locations[1] = new Location { Name = "Free Kleenex", VoucherCount = rand.Next(10) };
        locations[2] = new Location { Name = "Shower Space", VoucherCount = 0 };
        locations[3] = new Location { Name = "My Bath", VoucherCount = 0 };
        locations[4] = new Location { Name = "Heaven's Water Closet", VoucherCount = rand.Next(10) };
    }

    public class Location
    {
        public string? Name { get; set; }
        public int? VoucherCount { get; set; }


    }
}